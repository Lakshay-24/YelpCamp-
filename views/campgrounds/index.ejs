<%- include("../partials/header")%>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p> View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary" href="campgrounds/new" >Add New Campground</a>
        </p>
    </header>
    <div class="row text-center" style="display: flex; flex-flow: wrap;">
        <%campgrounds.forEach(function(campground){ %>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <img  src=<%=campground.image%>>
            <div class="caption">
              <h3><%=campground.name%></h3>
            </div>
            <a  class=" btn btn-primary btn-default" href="campgrounds/<%=campground._id%>">More info</a>
          </div>
        </div>
        <%})%>
    </div>
        
         
        
</div>
<%- include("../partials/footer")%>

