<%- include("../partials/header")%>
<div class="container text-center">
    <h1>Add new comment to <%= campground.name%></h1>
    <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Enter text" name="comment[text]">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Author" name="comment[author]">
        </div>
        <div class="form-group">
            <button class="btn btn-default btn-large btn-block btn-primary">Submit!</button>
        </div>
        
            
    </form>
    <a href="/">Go Back</a>
</div>
    <%-include("../partials/footer")%>